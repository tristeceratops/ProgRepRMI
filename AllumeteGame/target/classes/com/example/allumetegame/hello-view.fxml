<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="570.0" prefWidth="650.0" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.allumetegame.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <GridPane prefHeight="558.0" prefWidth="638.0">
     <columnConstraints>
       <ColumnConstraints hgrow="SOMETIMES" />
       <ColumnConstraints hgrow="SOMETIMES" />
         <ColumnConstraints hgrow="SOMETIMES" />
         <ColumnConstraints hgrow="SOMETIMES" />
         <ColumnConstraints hgrow="SOMETIMES" />
     </columnConstraints>
     <rowConstraints>
       <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="0.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
     </rowConstraints>
      <children>
         <ImageView fx:id="image" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="2" GridPane.rowIndex="1">
            <image>
               <Image url="@../../../pictures/alumpick.jpg" />
            </image></ImageView>
         <FlowPane prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="1">
            <children>
               <Button fx:id="btn1Joueur1" mnemonicParsing="false" onAction="#onClickBtn1J1" text="+1" />
               <Button fx:id="btn2Joueur1" mnemonicParsing="false" onAction="#onClickBtn2J1" text="+2" />
               <Label text="Allumettes détenu :" />
               <Label fx:id="labelAllumJ1" text="0" />
            </children>
         </FlowPane>
         <FlowPane prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="4" GridPane.rowIndex="1">
            <children>
               <Button fx:id="btn1Joueur2" mnemonicParsing="false" onAction="#onClickBtn1J2" text="+1" />
               <Button fx:id="btn2Joueur2" mnemonicParsing="false" onAction="#onClickBtn2J2" text="+2" />
               <Label text="Allumettes détenu :" />
               <Label fx:id="labelAllumJ2" text="0" />
            </children>
         </FlowPane>
         <FlowPane prefHeight="88.0" prefWidth="202.0" GridPane.columnIndex="2" GridPane.rowIndex="2">
            <children>
               <Label text="Nombre d'allumettes :" />
               <Label fx:id="labelAllumTotal" text="0" />
            </children>
         </FlowPane>
         <Label fx:id="LabelGameOver" GridPane.columnIndex="2" />
         <FlowPane fx:id="flowPanelJ1" prefHeight="200.0" prefWidth="200.0">
            <children>
               <Label text="Joueur 1" />
            </children>
         </FlowPane>
         <FlowPane fx:id="flowPanelJ2" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="4">
            <children>
               <Label text="Joueur 2" />
            </children>
         </FlowPane>
      </children>
   </GridPane>
</VBox>
